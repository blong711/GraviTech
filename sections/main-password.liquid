{%- style -%}
  .password-coming-soon {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgb(var(--color-background));
  }

  .password-content {
    width: 78rem;
    max-width: 90%;
    text-align: center;
    padding: 1.5rem;
    border: 1px solid rgba(var(--color-foreground), 0.2);
    border-radius: 8px;
    background: rgb(var(--color-background));
  }

  .password-title {
    font-family: var(--font-heading-family);
    font-size: 3rem;
    margin-bottom: 1.5rem;
    color: rgb(var(--color-foreground));
  }

  .password-description {
    line-height: 1.6;
    color: rgba(var(--color-foreground), 0.7);
    margin-bottom: 2.5rem;
  }

  .password-email-form {
    margin-bottom: 2rem;
  }

  .email-input-wrapper {
    display: flex;
    flex-direction: column;
    max-width: 450px;
    margin: 0 auto;
  }

  .hdt-field {
    display: flex;
    margin-top: 10px;
    margin-bottom: 20px;
  }

  .password-email-input {
    padding: 0.875rem 1rem;
    border: 1px solid rgba(var(--color-foreground), 0.2);
    border-radius: 4px;
    font-size: 1rem;
    background: rgb(var(--color-background));
    color: rgb(var(--color-foreground));
    width: 100%;
  }

  .password-email-input:focus {
    outline: none;
    border-color: rgb(var(--color-button));
  }

  .password-submit-btn {
    padding: 0.875rem 2rem;
    border: none;
    border-radius: 4px;
    font-size: 14px;
  }

  .password-social {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 2.8rem;
  }

  .password-social-link {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(var(--color-foreground), 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(var(--color-foreground), 0.7);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .password-social-link:hover {
    background: rgba(var(--color-foreground), 0.2);
    color: rgb(var(--color-foreground));
  }

  .password-social-link svg {
    width: 18px;
    height: 18px;
  }

  @media screen and (min-width: 1150px) {
    .password-content {
      padding: 5rem 7rem;
    }

    .password-title {
      font-size: 4.2rem;
    }

    .email-input-wrapper {
      max-width: 500px;
    }
  }
{%- endstyle -%}

<section class="password-coming-soon color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="password-content">
    <h1 class="password-title">
      {{ section.settings.heading | default: 'Coming Soon!' }}
    </h1>

    <div class="password-description text-sm">
      {{ section.settings.text }}
    </div>

    <div class="password-email-form">
      {%- form 'customer', class: 'newsletter-form' -%}
        <div class="email-input-wrapper">
          <input
            type="email"
            name="contact[email]"
            class="password-email-input"
            placeholder="{{ section.settings.placeholder | default: 'Enter email address *' }}"
            required
            aria-label="Email address"
          >
          <div class="hdt-field">
            {%- if form.errors -%}
              <div class="hdt-newsletter-form__message">
                <small
                  class="hdt-form__message hdt-form-message--error hdt-d-flex hdt-items-center"
                  id="Newsletter-error--{{ section.id }}"
                >
                  <svg
                    aria-hidden="true"
                    focusable="false"
                    viewBox="0 0 13 13"
                    class="hdt-icon hdt-icon--error"
                    style="width: 20px; height: 20px; margin-right: 10px; color: #ff4d4d;"
                  >
                    <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                    <circle cx="6.5" cy="6.5" r="5.5" fill="currentColor" stroke="currentColor" stroke-width="0.7"/>
                    <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                    <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7"/>
                  </svg>
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </small>
              </div>
            {%- endif -%}
            {%- if form.posted_successfully? -%}
              <div class="hdt-newsletter-form__message">
                <span
                  class="hdt-form__message hdt-newsletter-form__message--success hdt-d-flex hdt-items-center"
                  id="Newsletter-success--{{ section.id }}"
                >
                  <svg
                    aria-hidden="true"
                    focusable="false"
                    role="presentation"
                    viewBox="0 0 13 13"
                    class="hdt-inline-block"
                    style="width: 20px; height: 20px; margin-right: 10px; color: #2ecc71;"
                  >
                    <path d="M6.5 12.35C9.73087 12.35 12.35 9.73086 12.35 6.5C12.35 3.26913 9.73087 0.65 6.5 0.65C3.26913 0.65 0.65 3.26913 0.65 6.5C0.65 9.73086 3.26913 12.35 6.5 12.35Z" fill="currentColor" stroke="white" stroke-width="0.7"></path>
                    <path d="M5.53271 8.66357L9.25213 4.68197" stroke="white"></path>
                    <path d="M4.10645 6.7688L6.13766 8.62553" stroke="white"></path>
                  </svg>
                  {{- 'sections.newsletter_form.confirmation' | t }}
                </span>
              </div>
            {%- endif -%}
          </div>
          <button type="submit" class="password-submit-btn tf-btn">
            {{ section.settings.button_text | default: 'Notify me' }}
          </button>
        </div>
      {%- endform -%}
    </div>

    <div class="password-social">
      <ul class="tf-social-icon style-large">
        {%- if settings.social_facebook_link != blank -%}
          <li>
            <a
              href="{{ settings.social_facebook_link }}"
              class="social-item social-facebook"
              target="_blank"
              rel="noopener"
              aria-label="{{ 'general.social.links.facebook' | t }}"
            >
              <i class="icon icon-fb"></i>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_instagram_link != blank -%}
          <li>
            <a
              href="{{ settings.social_instagram_link }}"
              class="social-item social-instagram"
              target="_blank"
              rel="noopener"
              aria-label="{{ 'general.social.links.instagram' | t }}"
            >
              <i class="icon icon-instagram"></i>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_youtube_link != blank -%}
          <li>
            <a
              href="{{ settings.social_youtube_link }}"
              class="social-item social-youtube"
              target="_blank"
              rel="noopener"
              aria-label="{{ 'general.social.links.youtube' | t }}"
            >
              <i class="icon icon-youtube"></i>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_tiktok_link != blank -%}
          <li>
            <a
              href="{{ settings.social_tiktok_link }}"
              class="social-item social-tiktok"
              target="_blank"
              rel="noopener"
              aria-label="{{ 'general.social.links.tiktok' | t }}"
            >
              <i class="icon icon-tiktok"></i>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_twitter_link != blank -%}
          <li>
            <a
              href="{{ settings.social_twitter_link }}"
              class="social-item social-x"
              target="_blank"
              rel="noopener"
              aria-label="{{ 'general.social.links.twitter' | t }}"
            >
              <i class="icon icon-x"></i>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_snapchat_link != blank -%}
          <li>
            <a
              href="{{ settings.social_snapchat_link }}"
              class="social-item social-snapchat"
              target="_blank"
              rel="noopener"
              aria-label="{{ 'general.social.links.snapchat' | t }}"
            >
              <i class="icon icon-snapchat"></i>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_pinterest_link != blank -%}
          <li>
            <a
              href="{{ settings.social_pinterest_link }}"
              class="social-item social-pinterest"
              target="_blank"
              rel="noopener"
              aria-label="{{ 'general.social.links.pinterest' | t }}"
            >
              <i class="icon icon-pinterest"></i>
            </a>
          </li>
        {%- endif -%}
      </ul>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "t:sections.main_password.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.main_password.settings.colors.content"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.main_password.settings.colors.color_scheme.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.main_password.settings.content.content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.main_password.settings.content.heading.label",
      "default": "t:sections.main_password.settings.content.heading.default"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "t:sections.main_password.settings.content.text.label",
      "default": "t:sections.main_password.settings.content.text.default"
    },
    {
      "type": "header",
      "content": "t:sections.main_password.settings.email_signup.content"
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "t:sections.main_password.settings.email_signup.placeholder.label",
      "default": "t:sections.main_password.settings.email_signup.placeholder.default"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "t:sections.main_password.settings.email_signup.button_text.label",
      "default": "t:sections.main_password.settings.email_signup.button_text.default"
    }
  ],
  "presets": [
    {
      "name": "t:sections.main_password.presets.name"
    }
  ]
}
{% endschema %}
