{% schema %}
{
  "name": "Cart Drawer",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "show_free_shipping_bar",
      "label": "Show free shipping bar",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_cart_note",
      "label": "Show cart note",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_gift_wrap",
      "label": "Show gift wrap",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_coupon",
      "label": "Show coupon",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_shipping_estimator",
      "label": "Show shipping estimator",
      "default": true
    },
    {
      "type": "header",
      "content": "Complementary Products"
    },
    {
      "type": "text",
      "id": "complementary_products_heading",
      "label": "Heading",
      "default": "You might also like"
    },
    {
      "type": "collection",
      "id": "complementary_products_collection",
      "label": "Collection select",
      "info": "Select a collection to show complementary products"
    },
    {
      "type": "product_list",
      "id": "complementary_products_list",
      "label": "Products select",
      "info": "Select multiple products to display (will replace collection if selected)",
      "limit": 10
    }
  ],
  "blocks": [
    {
      "type": "total_price",
      "name": "Total Price",
      "limit": 1,
      "settings": [
        {
          "type": "paragraph",
          "content": "Cart and checkout prices always show currency codes. Example: $1.00 USD."
        }
      ]
    },
    {
      "type": "taxes_shipping",
      "name": "Taxes and Shipping",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "custom_message",
          "label": "Custom message",
          "default": "Taxes and shipping calculated at checkout",
          "info": "Leave empty to use default message"
        }
      ]
    },
    {
      "type": "terms_checkbox",
      "name": "Terms and Conditions",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "checkbox_text",
          "label": "Checkbox text",
          "default": "I agree with the",
          "info": "Text before the terms link"
        },
        {
          "type": "text",
          "id": "terms_link_text",
          "label": "Terms link text",
          "default": "terms and conditions",
          "info": "Text for the terms link"
        },
        {
          "type": "url",
          "id": "terms_url",
          "label": "Terms and conditions URL",
          "default": "/pages/terms-and-conditions",
          "info": "URL for the terms and conditions page"
        },
        {
          "type": "checkbox",
          "id": "required",
          "label": "Required checkbox",
          "default": true,
          "info": "You can add an I agree with the terms and conditions checkbox to your cart page that customers must check before continuing to the checkout. If a customer doesn't check the checkbox before clicking the checkout button, an alert pop up will prevent them from continuing."
        }
      ]
    },
    {
      "type": "checkout_buttons",
      "name": "Checkout Buttons",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "show_view_cart",
          "label": "Enable view cart button",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "show_checkout",
          "label": "Enable checkout button",
          "default": true
        },
        {
          "type": "text",
          "id": "view_cart_text",
          "label": "View cart button text",
          "default": "View cart"
        },
        {
          "type": "text",
          "id": "checkout_text",
          "label": "Checkout button text",
          "default": "Checkout"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Cart Drawer",
      "blocks": [
        {
          "type": "total_price"
        },
        {
          "type": "taxes_shipping"
        },
        {
          "type": "terms_checkbox"
        },
        {
          "type": "checkout_buttons"
        }
      ]
    }
  ]
}
{% endschema %}

{%- if settings.cart_type == 'drawer' -%}
<cart-drawer class="offcanvas offcanvas-end popup-style-1 popup-shopping-cart color-{{ section.settings.color_scheme | default: 'scheme-1' }}" id="shoppingCart" data-cart-drawer>
    <div class="canvas-wrapper">
        <div class="popup-header">
            <span class="title">{{ 'sections.cart.drawer.title' | t }}</span>
            <button type="button" class="icon-close icon-close-popup" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="wrap">
            {%- assign free_shipping_threshold = settings.free_shipping_threshold | times: 100 -%}
            {%- assign cart_total = cart.total_price -%}
            {%- assign remaining_amount = free_shipping_threshold | minus: cart_total -%}
            {%- assign progress_percentage = cart_total | times: 100.0 | divided_by: free_shipping_threshold | at_most: 100 -%}
            
            {%- if section.settings.show_free_shipping_bar -%}
            <div class="tf-mini-cart-threshold">
                <div class="text">
                    {% if cart_total < free_shipping_threshold %}
                        {{ 'sections.cart.drawer.spend' | t }} <span class="fw-medium">{% if settings.currency_code_enabled %}{{ remaining_amount | money }}{% else %}{{ remaining_amount | money_without_currency }}{% endif %}</span> {{ 'sections.cart.drawer.more_to_get' | t }} <span class="fw-medium">{{ 'sections.cart.drawer.free_shipping' | t }}</span>
                    {% else %}
                        <span class="fw-medium">Congratulations! You've got Free Shipping!</span>
                    {% endif %}
                </div>
                <div class="tf-progress-bar tf-progress-ship">
                    <div class="value" style="width: {{ progress_percentage }}%;" data-progress="{{ progress_percentage }}">
                        <i class="icon icon-car"></i>
                    </div>
                </div>
            </div>
            {%- endif -%}
            <div class="tf-mini-cart-wrap">
                <div class="tf-mini-cart-main">
                    <div class="tf-mini-cart-sroll">
                        <div class="tf-mini-cart-items">
                            {%- for item in cart.items -%}
                                <div class="tf-mini-cart-item" data-cart-item data-cart-item-key="{{ item.key }}">
                                    <div class="tf-mini-cart-image">
                                        <a href="{{ item.url }}">
                                            <img class="lazyload"
                                                data-src="{{ item.image | image_url: width: 150 }}"
                                                src="{{ item.image | image_url: width: 150 }}" 
                                                alt="{{ item.image.alt | escape }}"
                                                width="150"
                                                height="150"
                                                loading="lazy">
                                        </a>
                                    </div>
                                    <div class="tf-mini-cart-info">
                                        <div class="d-flex justify-content-between">
                                            <a class="title link text-md fw-medium" href="{{ item.url }}">{{ item.product.title }}</a>
                                            <i class="icon icon-close remove fs-12"></i>
                                        </div>
                                        <div class="info-variant">
                                            <select class="text-xs" data-current-variant="{{ item.variant.id }}">
                                                {%- for variant in item.product.variants -%}
                                                    <option value="{{ variant.title }}" 
                                                            data-variant-id="{{ variant.id }}"
                                                            {% if variant.id == item.variant.id %}selected{% endif %}>
                                                        {{ variant.title }}
                                                    </option>
                                                {%- endfor -%}
                                            </select>
                                            <i class="icon-pen edit"></i>
                                        </div>
                                        <p class="price-wrap text-sm fw-medium">
                                            <span class="new-price text-primary">{% if settings.currency_code_enabled %}{{ item.final_price | money }}{% else %}{{ item.final_price | money_without_currency }}{% endif %}</span>
                                            {%- if item.original_price > item.final_price -%}
                                                <span class="old-price text-decoration-line-through text-dark-1">{% if settings.currency_code_enabled %}{{ item.original_price | money }}{% else %}{{ item.original_price | money_without_currency }}{% endif %}</span>
                                            {%- endif -%}
                                        </p>
                                        <div class="wg-quantity small" data-cart-quantity>
                                            <button type="button" 
                                                    class="btn-quantity minus-btn" 
                                                    name="minus" 
                                                    data-cart-quantity-minus 
                                                    aria-label="Decrease quantity">-</button>
                                            <input class="quantity-product font-4" 
                                                   type="number" 
                                                   name="updates[]" 
                                                   value="{{ item.quantity }}" 
                                                   min="0" 
                                                   data-cart-quantity-input 
                                                   aria-label="Item quantity">
                                            <button type="button" 
                                                    class="btn-quantity plus-btn" 
                                                    name="plus" 
                                                    data-cart-quantity-plus 
                                                    aria-label="Increase quantity">+</button>
                                        </div>
                                    </div>
                                </div>
                            {%- endfor -%}
                        </div>
                        {%- if cart.item_count == 0 -%}
                            <div class="tf-mini-cart-empty">
                                <div class="empty-cart-message text-center">
                                    <div class="empty-cart-icon mb-3">
                                        <i class="icon icon-cart2" style="font-size: 3rem; opacity: 0.5;"></i>
                                    </div>
                                    <h4 class="empty-cart-title text-md fw-medium mb-2">{{ 'sections.cart.empty' | t }}</h4>
                                    <p class="empty-cart-subtitle text-sm opacity-8 mb-4">{{ 'sections.cart.empty_subtitle' | t }}</p>
                                    <a href="{{ settings.empty_cart_link }}" class="tf-btn animate-btn d-inline-flex bg-dark-2">
                                        {{ 'sections.cart.start_shopping' | t }}
                                    </a>
                                </div>
                            </div>
                        {%- endif -%}
                        {%- if cart.item_count > 0 and section.settings.complementary_products_collection != blank -%}
                            <div class="tf-minicart-recommendations">
                                <div class="tf-minicart-recommendations-heading d-flex justify-content-between align-items-end">
                                    <div class="tf-minicart-recommendations-title text-md fw-medium">{{ section.settings.complementary_products_heading }}</div>
                                    <div class="d-flex gap-10">
                                        <div class="swiper-button-prev nav-swiper arrow-1 size-30 nav-prev-also-product"></div>
                                        <div class="swiper-button-next nav-swiper arrow-1 size-30 nav-next-also-product"></div>
                                    </div>
                                </div>
                                <div dir="ltr" class="swiper tf-swiper" data-swiper='{
                                    "slidesPerView": 1,
                                    "spaceBetween": 10,
                                    "speed": 800,
                                    "observer": true,
                                    "observeParents": true,
                                    "slidesPerGroup": 1,
                                    "navigation": {
                                        "clickable": true,
                                        "nextEl": ".nav-next-also-product",
                                        "prevEl": ".nav-prev-also-product"
                                    }
                                }'>
                                    <div class="swiper-wrapper">
                                        {%- assign complementary_collection = collections[section.settings.complementary_products_collection] -%}
                                        {%- if section.settings.complementary_products_list != blank -%}
                                            {%- assign complementary_products = section.settings.complementary_products_list -%}
                                        {%- else -%}
                                            {%- assign complementary_products = complementary_collection.products -%}
                                        {%- endif -%}
                                        {%- for product in complementary_products limit: 4 -%}
                                            <div class="swiper-slide">
                                                <div class="tf-mini-cart-item line radius-16">
                                                    <div class="tf-mini-cart-image">
                                                        <a href="{{ product.url }}">
                                                            <img class="lazyload"
                                                                data-src="{{ product.featured_image | image_url: width: 150 }}"
                                                                src="{{ product.featured_image | image_url: width: 150 }}"
                                                                alt="{{ product.featured_image.alt | escape }}"
                                                                width="150"
                                                                height="150"
                                                                loading="lazy">
                                                        </a>
                                                    </div>
                                                    <div class="tf-mini-cart-info justify-content-center">
                                                        <a class="title link text-md fw-medium"
                                                            href="{{ product.url }}">{{ product.title }}</a>
                                                        <p class="price-wrap text-sm fw-medium">
                                                            <span class="new-price text-primary">{% if settings.currency_code_enabled %}{{ product.price | money }}{% else %}{{ product.price | money_without_currency }}{% endif %}</span>
                                                            {%- if product.compare_at_price > product.price -%}
                                                                <span class="old-price text-decoration-line-through text-dark-1">{% if settings.currency_code_enabled %}{{ product.compare_at_price | money }}{% else %}{{ product.compare_at_price | money_without_currency }}{% endif %}</span>
                                                            {%- endif -%}
                                                        </p>
                                                        <form method="post" action="/cart/add" class="w-max-content">
                                                            <input type="hidden" name="id" value="{{ product.first_available_variant.id }}">
                                                            <button type="submit" 
                                                                    class="tf-btn animate-btn d-inline-flex bg-dark-2"
                                                                    {% unless product.available %}disabled{% endunless %}
                                                                    data-cart-add>
                                                                {%- if product.available -%}
                                                                    {{ 'sections.cart.drawer.add_to_cart' | t }}
                                                                {%- else -%}
                                                                    {{ 'sections.cart.drawer.sold_out' | t }}
                                                                {%- endif -%}
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        {%- endfor -%}
                                    </div>
                                </div>
                            </div>
                        {%- endif -%}
                    </div>
                </div>
                <div class="tf-mini-cart-bottom">
                    <div class="tf-mini-cart-tool">
                        {%- if section.settings.show_gift_wrap -%}
                        <div class="tf-mini-cart-tool-btn btn-add-gift">
                            <i class="icon icon-gift2"></i>
                            <div class="text-xxs">{{ 'sections.cart.gift_wrap.title' | t }}</div>
                        </div>
                        {%- endif -%}
                        {%- if section.settings.show_cart_note -%}
                        <div class="tf-mini-cart-tool-btn btn-add-note">
                            <i class="icon icon-note"></i>
                            <div class="text-xxs">{{ 'sections.cart.note.title' | t }}</div>
                        </div>
                        {%- endif -%}
                        {%- if section.settings.show_coupon -%}
                        <div class="tf-mini-cart-tool-btn btn-coupon">
                            <i class="icon icon-coupon"></i>
                            <div class="text-xxs">{{ 'sections.cart.discount.title' | t }}</div>
                        </div>
                        {%- endif -%}
                        {%- if section.settings.show_shipping_estimator -%}
                        <div class="tf-mini-cart-tool-btn btn-estimate-shipping">
                            <i class="icon icon-car"></i>
                            <div class="text-xxs">{{ 'sections.cart.shipping.title' | t }}</div>
                        </div>
                        {%- endif -%}
                    </div>
                    <div class="tf-mini-cart-bottom-wrap">
                        {%- for block in section.blocks -%}
                            {%- case block.type -%}
                                {%- when 'total_price' -%}
                                    <div class="tf-cart-totals-discounts" {{ block.shopify_attributes }}>
                                        {%- if cart.total_discounts > 0 -%}
                                            <div class="tf-cart-discount text-sm">
                                                <span>{{ 'sections.cart.drawer.discount_label' | t }}</span>
                                                <span>-{% if settings.currency_code_enabled %}{{ cart.total_discounts | money }}{% else %}{{ cart.
                                                total_discounts | money_without_currency }}{% endif %}</span>
                                            </div>
                                        {%- endif -%}
                                        <div class="tf-cart-total text-xl fw-medium">{{ 'sections.cart.total' | t }}:</div>
                                        <div class="tf-totals-total-value text-xl fw-medium">{% if settings.currency_code_enabled %}{{ cart.total_price | 
                                        money }}{% else %}{{ cart.total_price | money_without_currency }}{% endif %}</div>
                                    </div>
                                {%- when 'taxes_shipping' -%}
                                    <div class="tf-cart-tax text-sm opacity-8" {{ block.shopify_attributes }}>
                                        {%- if cart.taxes_included -%}
                                            {{ 'sections.cart.drawer.including_taxes' | t }}
                                        {%- endif -%}
                                        {%- if block.settings.custom_message != blank -%}
                                            {{ block.settings.custom_message }}
                                        {%- else -%}
                                            {{ 'sections.cart.taxes_and_shipping_at_checkout' | t }}
                                        {%- endif -%}
                                    </div>
                                {%- when 'terms_checkbox' -%}
                                    <div class="tf-cart-checkbox" {{ block.shopify_attributes }}>
                                        <div class="tf-checkbox-wrapp">
                                            <input class="" 
                                                   type="checkbox" 
                                                   id="CartDrawer-Form_agree" 
                                                   name="agree_checkbox" 
                                                   {% if block.settings.required %}required{% endif %}>
                                            <div>
                                                <i class="icon-check"></i>
                                            </div>
                                        </div>
                                        <label for="CartDrawer-Form_agree" class="text-sm">
                                            {{ block.settings.checkbox_text }}
                                            <a href="{{ block.settings.terms_url }}" 
                                               title="Terms of Service" 
                                               class="fw-medium">{{ block.settings.terms_link_text }}</a>
                                        </label>
                                    </div>
                                {%- when 'checkout_buttons' -%}
                                    <div class="tf-mini-cart-view-checkout" {{ block.shopify_attributes }}>
                                        {%- if block.settings.show_view_cart -%}
                                            <a href="{{ routes.cart_url }}"
                                                class="tf-btn animate-btn d-inline-flex bg-dark-2 w-100 justify-content-center">{{ block.settings.view_cart_text | default: 'sections.cart.view_cart' | t }}</a>
                                        {%- endif -%}
                                        {%- if block.settings.show_checkout -%}
                                            <a href="/checkout"
                                                class="tf-btn btn-out-line-dark2 w-100 justify-content-center"><span>{{ block.settings.checkout_text | default: 'sections.cart.checkout' | t }}</span></a>
                                        {%- endif -%}
                                    </div>
                            {%- endcase -%}
                        {%- endfor -%}
                    </div>
                </div>
                {%- if section.settings.show_gift_wrap -%}
                <div class="tf-mini-cart-tool-openable add-gift">
                    <div class="overplay tf-mini-cart-tool-close"></div>
                    <form action="{{ routes.cart_url }}" method="post" class="tf-mini-cart-tool-content" data-cart-gift-wrap>
                        <div class="tf-mini-cart-tool-text text-sm fw-medium">{{ 'sections.cart.gift_wrap.title' | t }}</div>
                        {%- if settings.gift_wrap_product != blank -%}
                            {%- assign gift_wrap_product = all_products[settings.gift_wrap_product] -%}
                            {%- if gift_wrap_product != blank -%}
                                <div class="tf-mini-cart-tool-text1 text-dark-1">
                                    {{ 'sections.cart.gift_wrap.description_1' | t }}
                                    <span class="text fw-medium text-dark">{% if settings.currency_code_enabled %}{{ gift_wrap_product.price | money }}{% else %}{{ gift_wrap_product.price | money_without_currency }}{% endif %}</span>
                                    {{ 'sections.cart.gift_wrap.description_2' | t }}
                                </div>
                                <input type="hidden" name="gift_wrap_product_id" value="{{ gift_wrap_product.selected_or_first_available_variant.id }}">
                            {%- else -%}
                                <div class="tf-mini-cart-tool-text1 text-dark-1">{{ 'sections.cart.gift_wrap.description_1' | t }}
                                    <span class="text fw-medium text-dark">{% if settings.currency_code_enabled %}{{ gift_wrap_product.price | money }}{% else %}{{ gift_wrap_product.price | money_without_currency }}{% endif %}</span>
                                    {{ 'sections.cart.gift_wrap.description_2' | t }}</div>
                            {%- endif -%}
                        {%- else -%}
                            <div class="tf-mini-cart-tool-text1 text-dark-1">{{ 'sections.cart.gift_wrap.description_1' | t }}
                                <span class="text fw-medium text-dark">{% if settings.currency_code_enabled %}{{ gift_wrap_product.price | money }}{% else %}{{ gift_wrap_product.price | money_without_currency }}{% endif %}</span>
                                {{ 'sections.cart.gift_wrap.description_2' | t }}</div>
                        {%- endif -%}
                        <div class="tf-cart-tool-btns">
                            <button class="subscribe-button tf-btn animate-btn d-inline-flex bg-dark-2 w-100"
                                type="submit" data-cart-gift-wrap-add>{{ 'sections.cart.drawer.save' | t }}</button>
                            <button type="button" class="tf-btn btn-out-line-dark2 w-100 tf-mini-cart-tool-close">{{ 'sections.cart.drawer.close' | t }}</button>
                        </div>
                    </form>
                </div>
                {%- endif -%}
                {%- if section.settings.show_cart_note -%}
                <div class="tf-mini-cart-tool-openable add-note">
                    <div class="overplay tf-mini-cart-tool-close"></div>
                    <form action="{{ routes.cart_update_url }}" method="post" class="tf-mini-cart-tool-content" data-cart-note>
                        <label for="Cart-note" class="tf-mini-cart-tool-text text-sm fw-medium">{{ 'sections.cart.note.title' | t }}</label>
                        <textarea name="note" id="Cart-note" placeholder="{{ 'sections.cart.note.placeholder' | t }}">{{ cart.note }}</textarea>
                        <div class="tf-cart-tool-btns">
                            <button class="subscribe-button tf-btn animate-btn d-inline-flex bg-dark-2 w-100"
                                type="submit" data-cart-note-add>{{ 'sections.cart.drawer.save' | t }}</button>
                            <button type="button" class="tf-btn btn-out-line-dark2 w-100 tf-mini-cart-tool-close">{{ 'sections.cart.drawer.close' | t }}</button>
                        </div>
                    </form>
                </div>
                {%- endif -%}
                {%- if section.settings.show_coupon -%}
                <div class="tf-mini-cart-tool-openable coupon">
                    <div class="overplay tf-mini-cart-tool-close"></div>
                    <form action="{{ routes.cart_url }}" method="post" class="tf-mini-cart-tool-content" data-cart-discount>
                        <div class="tf-mini-cart-tool-text text-sm fw-medium">{{ 'sections.cart.discount.title' | t }}</div>
                        <div class="tf-mini-cart-tool-text1 text-dark-1">{{ 'sections.cart.discount.description' | t }}</div>
                        <input type="text" name="discount" placeholder="{{ 'sections.cart.discount.placeholder' | t }}" data-cart-discount-input>
                        <div class="tf-cart-tool-btns">
                            <button class="subscribe-button tf-btn animate-btn d-inline-flex bg-dark-2 w-100"
                                type="submit" data-cart-discount-add>{{ 'sections.cart.drawer.apply_discount' | t }}</button>
                            <button type="button" class="tf-btn btn-out-line-dark2 w-100 tf-mini-cart-tool-close">{{ 'sections.cart.discount.cancel' | t }}</button>
                        </div>
                    </form>
                </div>
                {%- endif -%}
                {%- if section.settings.show_shipping_estimator -%}
                <div class="tf-mini-cart-tool-openable estimate-shipping">
                    <div class="overplay tf-mini-cart-tool-close"></div>
                    <form id="shipping-form" class="tf-mini-cart-tool-content" data-shipping-calculator>
                        <div class="tf-mini-cart-tool-text text-sm fw-medium">{{ 'sections.cart.shipping.title' | t }}</div>
                        <div class="field">
                            <p class="text-sm">{{ 'sections.cart.shipping.country' | t }}</p>
                            <div class="tf-select">
                                <select class="w-100" id="shipping-country-form" name="shipping_address[country]"
                                    data-shipping-country>
                                    {{ all_country_option_tags }}
                                </select>
                            </div>
                        </div>
                        <div class="field">
                            <p class="text-sm">{{ 'sections.cart.shipping.province' | t }}</p>
                            <div class="tf-select">
                                <select id="shipping-province-form" name="shipping_address[province]"
                                    data-shipping-province></select>
                            </div>
                        </div>
                        <div class="field">
                            <p class="text-sm">{{ 'sections.cart.shipping.zip' | t }}</p>
                            <input type="text" 
                                   id="shipping-zip" 
                                   name="shipping_address[zip]" 
                                   value="{{ cart.shipping_address.zip }}"
                                   data-shipping-zip>
                        </div>
                        <div id="shipping-rates" class="shipping-rates" style="display: none;" data-shipping-rates>
                            <p class="shipping-rates__heading"></p>
                            <ul class="shipping-rates__list"></ul>
                        </div>
