            {"value": "icon-arrow-down", "label": "Arrow Down"},
            {"value": "icon-arrow-up", "label": "Arrow Up"},
            {"value": "icon-fashion-body", "label": "Fashion Body"},
            {"value": "icon-precision", "label": "Precision"},
            {"value": "icon-elegance", "label": "Elegance"},
            {"value": "icon-heart3", "label": "Heart 3"},
            {"value": "icon-order", "label": "Order"},
            {"value": "icon-quote5", "label": "Quote 5"},
            {"value": "icon-minus", "label": "Minus"},
            {"value": "icon-plus", "label": "Plus"},
            {"value": "icon-location", "label": "Location"},
            {"value": "icon-shipped", "label": "Shipped"},
            {"value": "icon-confirm", "label": "Confirm"},
            {"value": "icon-fire2", "label": "Fire"},
            {"value": "icon-sidebar", "label": "Sidebar"},
            {"value": "icon-video", "label": "Video"},
            {"value": "icon-car2", "label": "Car"},
            {"value": "icon-compare3", "label": "Compare"},
            {"value": "icon-check", "label": "Check"},
            {"value": "icon-eye", "label": "Eye"},
            {"value": "icon-copy", "label": "Copy"},
            {"value": "icon-share", "label": "Share"},
            {"value": "icon-ask", "label": "Ask"},
            {"value": "icon-coupon", "label": "Coupon"},
            {"value": "icon-note", "label": "Note"},
            {"value": "icon-gift2", "label": "Gift"},
            {"value": "icon-pen", "label": "Pen"},
            {"value": "icon-close", "label": "Close"},
            {"value": "icon-mail", "label": "Mail"},
            {"value": "icon-support2", "label": "Support 2"},
            {"value": "icon-shipping3", "label": "Shipping 3"},
            {"value": "icon-return3", "label": "Return 3"},
            {"value": "icon-customer", "label": "Customer"},
            {"value": "icon-return2", "label": "Return 2"},
            {"value": "icon-shipping2", "label": "Shipping 2"},
            {"value": "icon-leaf", "label": "Leaf"},
