          "default": "icon-shipping"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "FREE DELIVERY"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Enjoy free delivery on all orders"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon Box Slider",
      "blocks": [
        {
          "type": "icon_box",
          "settings": {
            "icon_class": "icon-shipping",
            "title": "FREE DELIVERY",
            "description": "Enjoy free delivery on all orders"
          }
        },
        {
          "type": "icon_box",
          "settings": {
            "icon_class": "icon-payment",
            "title": "SECURED PAYMENT",
            "description": "Secured payment"
          }
        },
        {
          "type": "icon_box",
          "settings": {
            "icon_class": "icon-return",
            "title": "EASY RETURNS",
            "description": "Within 14 days for a return"
          }
        },
        {
          "type": "icon_box",
          "settings": {
