{% schema %}
{
  "name": "t:sections.top_bar.name",
  "settings": [
    {
      "type": "header",
      "content": "Block visibility settings"
    },
    {
      "type": "checkbox",
      "id": "show_social_icons",
      "label": "Show social icons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_language_selector",
      "label": "Show language selector",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_currency_selector",
      "label": "Show currency selector",
      "default": true
    },
    {
      "type": "header",
      "content": "Border settings"
    },
    {
      "type": "checkbox",
      "id": "show_border_bottom",
      "label": "Show border bottom",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_mobile_rate",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "t:sections.top_bar.settings.padding_mobile_rate.label",
      "default": 75,
      "info": "t:sections.top_bar.settings.padding_mobile_rate.info"
    }
  ],
  "blocks": [
    {
      "type": "social_icons",
      "name": "t:sections.top_bar.blocks.social_icons.name",
      "limit": 1
    },
    {
      "type": "announcement",
      "name": "t:sections.top_bar.blocks.announcement.name",
      "settings": [
        {
          "type": "textarea",
          "id": "messages",
          "label": "t:sections.top_bar.blocks.announcement.settings.messages.label",
          "default": "t:sections.top_bar.blocks.announcement.settings.messages.default",
          "info": "t:sections.top_bar.blocks.announcement.settings.messages.info"
        }
      ],
      "limit": 1
    },
    {
      "type": "language_selector",
      "name": "t:sections.top_bar.blocks.language_selector.name",
      "limit": 1
    },
    {
      "type": "currency_selector",
      "name": "t:sections.top_bar.blocks.currency_selector.name",
      "limit": 1
    }
  ],
  "presets": [
    {
      "name": "t:sections.top_bar.name",
      "blocks": [
        {
          "type": "social_icons"
        },
        {
          "type": "announcement"
        },
        {
          "type": "language_selector"
        },
        {
          "type": "currency_selector"
        }
      ]
    }
  ]
}
{% endschema %}

<div
  class="tf-topbar color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding{% unless section.settings.show_border_bottom %} no-border-bottom{% endunless %}"
>
  <div class="container">
    <div class="topbar-wraper">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'social_icons' -%}
            {%- if section.settings.show_social_icons -%}
              <div class="d-none d-xl-block flex-shrink-0" {{ block.shopify_attributes }}>
                <ul class="tf-social-icon topbar-left">
                  {%- if settings.social_facebook_link != blank -%}
                    <li>
                      <a href="{{ settings.social_facebook_link }}" class="social-item social-facebook"
                        ><i class="icon icon-fb"></i
                      ></a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_instagram_link != blank -%}
                    <li>
                      <a href="{{ settings.social_instagram_link }}" class="social-item social-instagram"
                        ><i class="icon icon-instagram"></i
                      ></a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_youtube_link != blank -%}
                    <li>
                      <a href="{{ settings.social_youtube_link }}" class="social-item social-youtube"
                        ><i class="icon icon-youtube"></i
                      ></a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_tiktok_link != blank -%}
                    <li>
                      <a href="{{ settings.social_tiktok_link }}" class="social-item social-tiktok"
                        ><i class="icon icon-tiktok"></i
                      ></a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_twitter_link != blank -%}
                    <li>
                      <a href="{{ settings.social_twitter_link }}" class="social-item social-x"
                        ><i class="icon icon-x"></i
                      ></a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_snapchat_link != blank -%}
                    <li>
                      <a href="{{ settings.social_snapchat_link }}" class="social-item social-snapchat"
                        ><i class="icon icon-snapchat"></i
                      ></a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_pinterest_link != blank -%}
                    <li>
                      <a href="{{ settings.social_pinterest_link }}" class="social-item social-pinterest"
                        ><i class="icon icon-pinterest"></i
                      ></a>
                    </li>
                  {%- endif -%}
                </ul>
              </div>
            {%- endif -%}
          {%- when 'announcement' -%}
            <div class="overflow-hidden" {{ block.shopify_attributes }}>
              <div class="topbar-center marquee-wrapper">
                <div class="initial-child-container">
                  {%- assign messages = block.settings.messages | split: ',' -%}
                  {% for i in (1..5) %}
                    {%- for message in messages -%}
                      <div class="marquee-child-item">
                        <p>{{ message | strip }}</p>
                      </div>
                      {%- unless forloop.last -%}
                        <div class="marquee-child-item"><span class="dot"></span></div>
                      {%- endunless -%}
                    {%- endfor -%}
                    {%- if messages.size > 0 -%}
                      <div class="marquee-child-item"><span class="dot"></span></div>
                    {%- endif -%}
                  {% endfor %}
                </div>
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}

      {%- comment -%} Render language and currency selectors separately {%- endcomment -%}
      {%- assign has_visible_selectors = false -%}
      {%- for block in section.blocks -%}
        {%- if block.type == 'language_selector' and section.settings.show_language_selector -%}
          {%- assign has_visible_selectors = true -%}
          {%- break -%}
        {%- elsif block.type == 'currency_selector' and section.settings.show_currency_selector -%}
          {%- assign has_visible_selectors = true -%}
          {%- break -%}
        {%- endif -%}
      {%- endfor -%}

      {%- if has_visible_selectors -%}
        <div class="d-none d-xl-block flex-shrink-0">
          <div class="topbar-right">
            {%- for block in section.blocks -%}
              {%- if block.type == 'language_selector' and section.settings.show_language_selector -%}
                <div class="tf-languages" {{ block.shopify_attributes }}>
                  {%- form 'localization', id: 'LanguageForm', class: 'localization-form' -%}
                    <div class="no-js-hidden">
                      <select
                        name="locale_code"
                        id="language-selector"
                        class="image-select center style-default type-languages"
                        aria-labelledby="LanguageLabel"
                      >
                        {%- for language in localization.available_languages -%}
                          <option
                            value="{{ language.iso_code }}"
                            {% if language.iso_code == localization.language.iso_code %}
                              selected
                            {% endif %}
                          >
                            {{ language.endonym_name }}
                          </option>
                        {%- endfor -%}
                      </select>
                    </div>
                    <input type="hidden" name="return_to" value="{{ request.path }}">
                  {%- endform -%}
                </div>
              {%- elsif block.type == 'currency_selector' and section.settings.show_currency_selector -%}
                <div class="tf-currencies" {{ block.shopify_attributes }}>
                  {%- form 'localization', id: 'CurrencyForm', class: 'localization-form' -%}
                    <div class="no-js-hidden">
                      <select
                        name="country_code"
                        id="currency-selector"
                        class="image-select center style-default type-currencies"
                        aria-labelledby="CurrencyLabel"
                      >
                        {%- for country in localization.available_countries -%}
                          <option
                            value="{{ country.iso_code }}"
                            {% if country.iso_code == localization.country.iso_code %}
                              selected
                            {% endif %}
                            data-thumbnail="{{ 'country/' | append: country.iso_code | downcase | append: '.png' | asset_url }}"
                          >
                            {{ country.name }} ({{ country.currency.iso_code }}
                            {{ country.currency.symbol }})
                          </option>
                        {%- endfor -%}
                      </select>
                    </div>
                    <input type="hidden" name="return_to" value="{{ request.path }}">
                  {%- endform -%}
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: calc({{ section.settings.padding_top }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
      padding-bottom: calc({{ section.settings.padding_bottom }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
      transition: all 0.3s ease;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

    /* Smooth hide/show animations */
    .tf-topbar {
      transition: opacity 0.3s ease, transform 0.3s ease;
    }

    .tf-topbar.hidden {
      opacity: 0;
      transform: translateY(-100%);
      pointer-events: none;
    }

    /* Individual block hide/show */
    .topbar-block-hidden {
      display: none !important;
    }

    /* Override the default dark color for color schemes */
    #shopify-section-{{ section.id }} .color-{{ section.settings.color_scheme }} .marquee-child-item,
    #shopify-section-{{ section.id }} .color-{{ section.settings.color_scheme }} .marquee-child-item p,
    .topbar-right span {
      color: rgba(var(--color-foreground)) !important;
    }

  #shopify-section-{{ section.id }} .color-{{ section.settings.color_scheme }} .dot {
    background-color: rgba(var(--color-foreground)) !important;
  }

  /* Border bottom control */
  .tf-topbar.no-border-bottom {
    border-bottom: none !important;
  }
{%- endstyle -%}
