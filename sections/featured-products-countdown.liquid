{% schema %}
{
  "name": "Featured Countdown",
  "blocks": [
    {
      "type": "countdown",
      "name": "Countdown Timer",
      "limit": 1,
      "settings": [
        {
          "type": "number",
          "id": "year",
          "label": "Year",
          "default": 2024
        },
        {
          "type": "range",
          "id": "month",
          "label": "Month",
          "min": 1,
          "max": 12,
          "step": 1,
          "default": 12
        },
        {
          "type": "range",
          "id": "day",
          "label": "Day",
          "min": 1,
          "max": 31,
          "step": 1,
          "default": 31
        },
        {
          "type": "range",
          "id": "hour",
          "label": "Hour (24-hour format)",
          "min": 0,
          "max": 23,
          "step": 1,
          "default": 23
        },
        {
          "type": "range",
          "id": "minute",
          "label": "Minute",
          "min": 0,
          "max": 59,
          "step": 1,
          "default": 59
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "width",
      "label": "t:sections.main_slider.settings.width.label",
      "options": [
        {
          "value": "container",
          "label": "t:sections.main_slider.settings.width.options.boxed"
        },
        {
          "value": "container-full",
          "label": "t:sections.main_slider.settings.width.options.full_width"
        }
      ],
      "default": "container"
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Hot Deals"
    },
    {
      "type": "select",
      "id": "heading_tag",
      "label": "Title Size",
      "options": [
        {
          "value": "h5",
          "label": "Small"
        },
        {
          "value": "h4",
          "label": "Medium"
        },
        {
          "value": "h3",
          "label": "Large"
        }
      ],
      "default": "h4"
    },
    {
      "type": "header",
      "content": "Subtitle"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Explore our most popular pieces that customers can't get enough of"
    },
    {
      "type": "select",
      "id": "subtitle_size",
      "label": "Subtitle Size",
      "options": [
        {
          "value": "text-sm",
          "label": "Small"
        },
        {
          "value": "text-md",
          "label": "Medium"
        },
        {
          "value": "text-lg",
          "label": "Large"
        }
      ],
      "default": "text-md"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "product_list",
      "id": "product_list",
      "label": "Products",
      "info": "Selected products will override collection selection"
    },
    {
      "type": "header",
      "content": "Slider Settings"
    },
    {
      "type": "range",
      "id": "products_per_row_desktop",
      "label": "Products per row (Desktop)",
      "min": 3,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "products_per_row_tablet",
      "label": "Products per row (Tablet)",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "products_per_row_mobile",
      "label": "Products per row (Mobile)",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "Show prev/next buttons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_mobile_dots",
      "label": "Show pagination dots on mobile",
      "default": true
    },
    {
      "type": "number",
      "id": "products_to_show",
      "label": "Number of products to show",
      "default": 6
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_mobile_rate",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "t:sections.top_bar.settings.padding_mobile_rate.label",
      "default": 75,
      "info": "t:sections.top_bar.settings.padding_mobile_rate.info"
    }
  ],
  "presets": [
    {
      "name": "Featured Products Countdown",
      "category": "Product"
    }
  ]
}
{% endschema %}

<section class="flat-spacing color-{{ section.settings.color_scheme }}">
    <div class="{{ section.settings.width }}">
        <div class="flat-title style-between wow fadeInUp">
            <div class="box-title">
                <{{ section.settings.heading_tag }} class="title">{{ section.settings.title }}</{{ section.settings.heading_tag }}>
                <p class="desc {{ section.settings.subtitle_size }}" style="color: rgb(var(--color-foreground2));">{{ section.settings.subtitle }}</p>
            </div>
            {% for block in section.blocks %}
              {% if block.type == 'countdown' %}
                <div class="wg-countdown-2" {{ block.shopify_attributes }}>
                  {%- capture countdown_date -%}
                    {{ block.settings.year }}-{{ block.settings.month | prepend: '00' | slice: -2, 2 }}-{{ block.settings.day | prepend: '00' | slice: -2, 2 }} {{ block.settings.hour | prepend: '00' | slice: -2, 2 }}:{{ block.settings.minute | prepend: '00' | slice: -2, 2 }}:00
                  {%- endcapture -%}
                  <span class="js-countdown" 
                    data-countdown="{{ countdown_date }}"
                    data-labels="Days,Hours,Mins,Secs">
                  </span>
                </div>
              {% endif %}
            {% endfor %}
        </div>
        <div class="hover-sw-nav">
            {%- assign show_nav = section.settings.show_navigation -%}
            {%- assign show_dots = section.settings.show_mobile_dots -%}
            {%- assign slides_mobile = section.settings.products_per_row_mobile -%}
            {%- assign slides_tablet = section.settings.products_per_row_tablet -%}
            {%- assign slides_desktop = section.settings.products_per_row_desktop -%}

            <div dir="ltr" class="swiper tf-swiper" data-swiper='{
                    "slidesPerView": {{ slides_mobile }},
                    "spaceBetween": 12,
                    "speed": 800,
                    "observer": true,
                    "observeParents": true,
                    "slidesPerGroup": {{ slides_mobile }},
                    "navigation": {
                        "clickable": true,
                        "nextEl": ".nav-next-deal",
                        "prevEl": ".nav-prev-deal",
                        "enabled": {{ show_nav }}
                    },
                    "pagination": { 
                        "el": ".sw-pagination-deal", 
                        "clickable": true,
                        "enabled": {{ show_dots }}
                    },
                    "breakpoints": {
                        "768": { 
                            "slidesPerView": {{ slides_tablet }}, 
                            "spaceBetween": 12, 
                            "slidesPerGroup": {{ slides_tablet }}
                        },
                        "1200": { 
                            "slidesPerView": {{ slides_desktop }}, 
                            "spaceBetween": 24, 
                            "slidesPerGroup": {{ slides_desktop }}
                        }
                    }
                }'>
                <div class="swiper-wrapper wow fadeInUp">
                    {% assign products = '' %}
                    {% if section.settings.product_list != blank %}
                        {% assign products = section.settings.product_list %}
                    {% elsif section.settings.collection != blank %}
                        {% assign products = section.settings.collection.products %}
                    {% endif %}

                    {% if products != blank %}
                        {% for product in products limit: section.settings.products_to_show %}
                    <div class="swiper-slide">
                                {% render 'product-card', product: product %}
                            </div>
                        {% endfor %}
                    {% else %}
                        {% for i in (1..6) %}
                    <div class="swiper-slide">
                        <div class="card-product style-2 style-border-2">
                                    <div class="placeholder-image aspect-ratio" style="--aspect-ratio: 1;">
                                        {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
                {% if section.settings.show_mobile_dots %}
                <div class="d-flex d-xl-none sw-dot-default sw-pagination-deal justify-content-center"></div>
                {% endif %}
            </div>
            {% if section.settings.show_navigation %}
            <div class="swiper-button-next d-none d-xl-flex nav-swiper nav-next-deal"></div>
            <div class="swiper-button-prev d-none d-xl-flex nav-swiper nav-prev-deal"></div>
            {% endif %}
        </div>
    </div>
</section>
{% style %}
    .section-{{ section.id }}-padding {
        padding-top: calc({{ section.settings.padding_top }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
        padding-bottom: calc({{ section.settings.padding_bottom }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
      }
    
      @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
          padding-top: {{ section.settings.padding_top }}px;
          padding-bottom: {{ section.settings.padding_bottom }}px;
        }
      }
    {% endstyle %}