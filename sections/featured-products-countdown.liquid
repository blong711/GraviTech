{% schema %}
{
  "name": "t:sections.featured-products-countdown.name",
  "blocks": [
    {
      "type": "countdown",
      "name": "t:sections.featured-products-countdown.blocks.countdown.name",
      "limit": 1,
      "settings": [
        {
          "type": "number",
          "id": "year",
          "label": "t:sections.featured-products-countdown.blocks.countdown.settings.year.label",
          "default": 2024
        },
        {
          "type": "range",
          "id": "month",
          "label": "t:sections.featured-products-countdown.blocks.countdown.settings.month.label",
          "min": 1,
          "max": 12,
          "step": 1,
          "default": 12
        },
        {
          "type": "range",
          "id": "day",
          "label": "t:sections.featured-products-countdown.blocks.countdown.settings.day.label",
          "min": 1,
          "max": 31,
          "step": 1,
          "default": 31
        },
        {
          "type": "range",
          "id": "hour",
          "label": "t:sections.featured-products-countdown.blocks.countdown.settings.hour.label",
          "min": 0,
          "max": 23,
          "step": 1,
          "default": 23
        },
        {
          "type": "range",
          "id": "minute",
          "label": "t:sections.featured-products-countdown.blocks.countdown.settings.minute.label",
          "min": 0,
          "max": 59,
          "step": 1,
          "default": 59
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "width",
      "label": "t:sections.main_slider.settings.width.label",
      "options": [
        {
          "value": "container",
          "label": "t:sections.main_slider.settings.width.options.boxed"
        },
        {
          "value": "container-full",
          "label": "t:sections.main_slider.settings.width.options.full_width"
        }
      ],
      "default": "container"
    },
    {
      "type": "header",
      "content": "t:sections.featured-products-countdown.settings.heading.content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.featured-products-countdown.settings.title.label",
      "default": "t:sections.featured-products-countdown.settings.title.default"
    },
    {
      "type": "select",
      "id": "heading_tag",
      "label": "t:sections.featured-products-countdown.settings.heading_tag.label",
      "options": [
        {
          "value": "h5",
          "label": "t:sections.featured-products-countdown.settings.heading_tag.options.small"
        },
        {
          "value": "h4",
          "label": "t:sections.featured-products-countdown.settings.heading_tag.options.medium"
        },
        {
          "value": "h3",
          "label": "t:sections.featured-products-countdown.settings.heading_tag.options.large"
        }
      ],
      "default": "h4"
    },
    {
      "type": "header",
      "content": "t:sections.featured-products-countdown.settings.subtitle.content"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "t:sections.featured-products-countdown.settings.subtitle_text.label",
      "default": "t:sections.featured-products-countdown.settings.subtitle_text.default"
    },
    {
      "type": "select",
      "id": "subtitle_size",
      "label": "t:sections.featured-products-countdown.settings.subtitle_size.label",
      "options": [
        {
          "value": "text-sm",
          "label": "t:sections.featured-products-countdown.settings.subtitle_size.options.small"
        },
        {
          "value": "text-md",
          "label": "t:sections.featured-products-countdown.settings.subtitle_size.options.medium"
        },
        {
          "value": "text-lg",
          "label": "t:sections.featured-products-countdown.settings.subtitle_size.options.large"
        }
      ],
      "default": "text-md"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.featured-products-countdown.settings.collection.label"
    },
    {
      "type": "product_list",
      "id": "product_list",
      "label": "t:sections.featured-products-countdown.settings.product_list.label",
      "info": "t:sections.featured-products-countdown.settings.product_list.info"
    },
    {
      "type": "header",
      "content": "t:sections.featured-products-countdown.settings.slider_settings.content"
    },
    {
      "type": "range",
      "id": "products_per_row_desktop",
      "label": "t:sections.featured-products-countdown.settings.products_per_row_desktop.label",
      "min": 3,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "products_per_row_tablet",
      "label": "t:sections.featured-products-countdown.settings.products_per_row_tablet.label",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "products_per_row_mobile",
      "label": "t:sections.featured-products-countdown.settings.products_per_row_mobile.label",
      "min": 0,
      "max": 2,
      "step": 1,
      "default": 2
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "t:sections.featured-products-countdown.settings.show_navigation.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_mobile_dots",
      "label": "t:sections.featured-products-countdown.settings.show_mobile_dots.label",
      "default": true
    },
    {
      "type": "number",
      "id": "products_to_show",
      "label": "t:sections.featured-products-countdown.settings.products_to_show.label",
      "default": 6
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_mobile_rate",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "t:sections.top_bar.settings.padding_mobile_rate.label",
      "default": 75,
      "info": "t:sections.top_bar.settings.padding_mobile_rate.info"
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured-products-countdown.name",
      "category": "Product"
    }
  ]
}
{% endschema %}

<section class="flat-spacing color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="{{ section.settings.width }}">
    <div class="flat-title style-between wow fadeInUp">
      <div class="box-title">
        <{{ section.settings.heading_tag }} class="title" style="color: rgb(var(--color-foreground2));">
          {{- section.settings.title -}}
        </{{ section.settings.heading_tag }}>
        <p class="desc {{ section.settings.subtitle_size }}" style="color: rgb(var(--color-foreground), 0.7);">
          {{ section.settings.subtitle }}
        </p>
      </div>
      {% for block in section.blocks %}
        {% if block.type == 'countdown' %}
          <div class="wg-countdown-2" {{ block.shopify_attributes }}>
            {%- capture countdown_date -%}
                    {{ block.settings.year }}-{{ block.settings.month | prepend: '00' | slice: -2, 2 }}-{{ block.settings.day | prepend: '00' | slice: -2, 2 }} {{ block.settings.hour | prepend: '00' | slice: -2, 2 }}:{{ block.settings.minute | prepend: '00' | slice: -2, 2 }}:00
                  {%- endcapture -%}
            <span
              class="js-countdown"
              data-countdown="{{ countdown_date }}"
              data-labels="Days,Hours,Mins,Secs"
            >
            </span>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <div class="hover-sw-nav">
      {%- assign show_nav = section.settings.show_navigation -%}
      {%- assign show_dots = section.settings.show_mobile_dots -%}
      {%- assign slides_mobile = section.settings.products_per_row_mobile -%}
      {%- assign slides_tablet = section.settings.products_per_row_tablet -%}
      {%- assign slides_desktop = section.settings.products_per_row_desktop -%}

      <div
        dir="ltr"
        class="swiper tf-swiper"
        data-swiper='
          {
              "slidesPerView": {{ slides_mobile }},
              "spaceBetween": 12,
              "speed": 800,
              "observer": true,
              "observeParents": true,
              "slidesPerGroup": {{ slides_mobile }},
              "navigation": {
                  "clickable": true,
                  "nextEl": ".nav-next-deal",
                  "prevEl": ".nav-prev-deal",
                  "enabled": {{ show_nav }}
              },
              "pagination": {
                  "el": ".sw-pagination-deal",
                  "clickable": true,
                  "enabled": {{ show_dots }}
              },
              "breakpoints": {
                  "768": {
                      "slidesPerView": {{ slides_tablet }},
                      "spaceBetween": 12,
                      "slidesPerGroup": {{ slides_tablet }}
                  },
                  "1200": {
                      "slidesPerView": {{ slides_desktop }},
                      "spaceBetween": 24,
                      "slidesPerGroup": {{ slides_desktop }}
                  }
              }
          }
        '
      >
        <div class="swiper-wrapper wow fadeInUp">
          {% assign products = '' %}
          {% if section.settings.product_list != blank %}
            {% assign products = section.settings.product_list %}
          {% elsif section.settings.collection != blank %}
            {% assign products = section.settings.collection.products %}
          {% endif %}

          {% if products != blank %}
            {% for product in products limit: section.settings.products_to_show %}
              <div class="swiper-slide">
                {% comment %} Only first product gets eager loading for LCP, others lazy load {% endcomment %}
                {% if forloop.first %}
                  {% render 'product-card', product: product, loading_priority: 'eager' %}
                {% else %}
                  {% render 'product-card', product: product %}
                {% endif %}
              </div>
            {% endfor %}
          {% else %}
            {% for i in (1..6) %}
              <div class="swiper-slide">
                <div class="card-product style-2 style-border-2">
                  <div class="placeholder-image aspect-ratio" style="--aspect-ratio: 1;">
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                </div>
              </div>
            {% endfor %}
          {% endif %}
        </div>
        {% if section.settings.show_mobile_dots %}
          <div class="d-flex d-xl-none sw-dot-default sw-pagination-deal justify-content-center"></div>
        {% endif %}
      </div>
      {% if section.settings.show_navigation %}
        <div class="swiper-button-next d-none d-xl-flex nav-swiper nav-next-deal"></div>
        <div class="swiper-button-prev d-none d-xl-flex nav-swiper nav-prev-deal"></div>
      {% endif %}
    </div>
  </div>
</section>
{% style %}
  .wg-countdown-2 {
    background-color: rgb(var(--color-background2));
  }
  .wg-countdown-2 .countdown__value {
    color: rgb(var(--color-foreground3)) ;
  }

.section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
    padding-bottom: calc({{ section.settings.padding_bottom }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
  }

  @media screen and (min-width: 750px) and (max-width: 1199px) {
    .section-{{ section.id }}-padding {
      padding-top: calc({{ section.settings.padding_top }}px * 0.8);
      padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.8);
    }
  }

  @media screen and (min-width: 1200px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}
