{% comment %}
  Featured Products List Section
  Renders a grid of featured products using the product-card snippet
{% endcomment %}

{%- liquid
  assign mobile_cols = section.settings.columns_mobile | default: 2
  assign tablet_cols = section.settings.columns_tablet | default: 3
  assign desktop_cols = section.settings.columns_desktop | default: 4
  
  assign grid_class = 'tf-grid-layout'
  
  case mobile_cols
    when 1
      assign grid_class = grid_class | append: ' tf-col-1'
    when 2
      assign grid_class = grid_class | append: ' tf-col-2'
    when 3
      assign grid_class = grid_class | append: ' tf-col-3'
  endcase
  
  case tablet_cols
    when 2
      assign grid_class = grid_class | append: ' md-col-2'
    when 3
      assign grid_class = grid_class | append: ' md-col-3'
    when 4
      assign grid_class = grid_class | append: ' md-col-4'
  endcase
  
  case desktop_cols
    when 2
      assign grid_class = grid_class | append: ' lg-col-2'
    when 3
      assign grid_class = grid_class | append: ' lg-col-3'
    when 4
      assign grid_class = grid_class | append: ' lg-col-4'
    when 5
      assign grid_class = grid_class | append: ' xl-col-5'
    when 6
      assign grid_class = grid_class | append: ' xl-col-6'
  endcase
-%}

<section id="FeaturedProducts-{{ section.id }}" class="featured-products-list section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="{{ section.settings.width }}">
    <div class="flat-title style-between">
      <div class="box-title">
        <{{ section.settings.title_tag }} class="title">{{ section.settings.title }}</{{ section.settings.title_tag }}>
        {% if section.settings.description != blank %}
          <p class="desc text-main {{ section.settings.description_size }}">{{ section.settings.description }}</p>
        {% endif %}
      </div>
      
      {% if section.settings.show_countdown %}
        <div class="wg-countdown-2">
          <span class="js-countdown" 
                data-timer="{{ section.settings.countdown_timer }}" 
                data-labels="{{ section.settings.countdown_labels }}"></span>
        </div>
      {% endif %}
    </div>
  
    <div class="tab-content">
      <div class="tab-pane fade active show" role="tabpanel">
        <div class="{{ grid_class }}">
          {%- if section.settings.selected_products != blank -%}
            {%- comment -%} Display manually selected products {%- endcomment -%}
            {%- for product in section.settings.selected_products -%}
              {%- if product != blank -%}
                {% render 'product-card',
                  product: product,
                  show_progress_sale: false,
                  show_color_swatches: true
                %}
              {%- endif -%}
            {%- endfor -%}
          {%- elsif section.settings.collection != blank -%}
            {%- comment -%} Fallback to collection products if no products are manually selected {%- endcomment -%}
            {%- assign collection = collections[section.settings.collection] -%}
            {%- for product in collection.products limit: section.settings.products_to_show -%}
              {% render 'product-card',
                product: product,
                show_progress_sale: false,
                show_color_swatches: true
              %}
            {%- endfor -%}
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</section>

{% style %}
  .section-{{ section.id }}-padding {
          padding-top: calc({{ section.settings.padding_top }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
          padding-bottom: calc({{ section.settings.padding_bottom }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
      }
      
  @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      }
  }
  {% endstyle %}

