{% comment %}
  Featured Products List Section
  Renders a grid of featured products using the product-card snippet
{% endcomment %}

{%- liquid
  case section.settings.columns_desktop
    when 2
      assign grid_class = 'tf-grid-layout tf-col-2'
    when 3
      assign grid_class = 'tf-grid-layout tf-col-2 lg-col-3'
    when 4
      assign grid_class = 'tf-grid-layout tf-col-2 lg-col-3 xl-col-4'
    when 5
      assign grid_class = 'tf-grid-layout tf-col-2 lg-col-3 xl-col-5'
    when 6
      assign grid_class = 'tf-grid-layout tf-col-2 lg-col-3 xl-col-6'
    else
      assign grid_class = 'tf-grid-layout tf-col-2 lg-col-3 xl-col-4'
  endcase
-%}

<section id="FeaturedProducts-{{ section.id }}" class="featured-products-list">
  <div class="flat-title style-between">
    <div class="box-title">
      <h4 class="title">{{ section.settings.title }}</h4>
      {% if section.settings.description != blank %}
        <p class="desc text-main text-md">{{ section.settings.description }}</p>
      {% endif %}
    </div>
    
    {% if section.settings.show_countdown %}
      <div class="wg-countdown-2">
        <span class="js-countdown" 
              data-timer="{{ section.settings.countdown_timer }}" 
              data-labels="{{ section.settings.countdown_labels }}"></span>
      </div>
    {% endif %}
  </div>

  <div class="tab-content">
    <div class="tab-pane fade active show" role="tabpanel">
      <div class="{{ grid_class }}">
        {%- if section.settings.selected_products != blank -%}
          {%- comment -%} Display manually selected products {%- endcomment -%}
          {%- for product_handle in section.settings.selected_products -%}
            {%- assign product = all_products[product_handle] -%}
            {%- if product != blank -%}
              {% render 'product-card',
                product: product,
                show_progress_sale: false,
                show_color_swatches: true
              %}
            {%- endif -%}
          {%- endfor -%}
        {%- elsif section.settings.collection != blank -%}
          {%- comment -%} Fallback to collection products if no products are manually selected {%- endcomment -%}
          {%- assign collection = collections[section.settings.collection] -%}
          {%- for product in collection.products limit: section.settings.products_to_show -%}
            {% render 'product-card',
              product: product,
              show_progress_sale: false,
              show_color_swatches: true
            %}
          {%- endfor -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Products List",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Hot Deals"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Section Description",
      "default": "Explore our most popular pieces that customers can't get enough of"
    },
    {
      "type": "checkbox",
      "id": "show_countdown",
      "label": "Show Countdown Timer",
      "default": true
    },
    {
      "type": "number",
      "id": "countdown_timer",
      "label": "Countdown Timer (seconds)",
      "default": 46556
    },
    {
      "type": "text",
      "id": "countdown_labels",
      "label": "Countdown Labels",
      "default": "Days,Hours,Mins,Secs"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "product_list",
      "id": "selected_products",
      "label": "Select Products",
      "info": "Choose specific products to display. If none selected, will show products from the selected collection."
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 24,
      "step": 4,
      "default": 12,
      "label": "Number of products to show"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "Columns on desktop"
    },
    {
      "type": "range",
      "id": "columns_tablet",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "Columns on tablet"
    },
    {
      "type": "range",
      "id": "columns_mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2,
      "label": "Columns on mobile"
    }
  ],
  "presets": [
    {
      "name": "Featured Products List"
    }
  ]
}
{% endschema %}