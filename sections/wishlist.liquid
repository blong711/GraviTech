{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
    padding-bottom: calc({{ section.settings.padding_bottom }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  if request.design_mode
    assign products = section.settings.product_list
    assign products_count = products.count
  else
    assign products = search.results
    assign products_count = search.results_count
  endif
-%}

<section
  class="section-{{ section.id }}-padding s-account flat-spacing-4 color-{{ section.settings.color_scheme }}"
>
  <div
    class="{% if section.settings.width == 'boxed' %}container{% else %}container-full{% endif %}"
  >
    <div class="row">
      <div class="col-lg-12">
        {%- if request.design_mode -%}
          {%- comment -%} Design mode - no pagination needed {%- endcomment -%}
          <div
            class="wrapper-wishlist tf-grid-layout tf-col-{{ section.settings.items_per_row_mobile }} lg-col-{{ section.settings.items_per_row_tablet }} xl-col-{{ section.settings.items_per_row_desktop }}"
          >
            {% if products_count > 0 %}
              {% for product in products limit: section.settings.max_items %}
                {% render 'product-card-wishlist', product: product %}
              {% endfor %}
            {% endif %}
          </div>

          {% if products_count <= 0 %}
            <div class="tf-wishlist-empty text-center">
              <p class="text-md text-noti mb-4">{{ 'sections.wishlist.no_product_added' | t }}</p>
              <a href="{{ routes.root_url }}" class="tf-btn animate-btn btn-back-shop">{{ 'sections.wishlist.back_to_shopping' | t }}</a>
            </div>
          {% endif %}
        {%- else -%}
          {%- comment -%} Live mode - use pagination {%- endcomment -%}
          {%- paginate search.results by section.settings.max_items -%}
            <div
              class="wrapper-wishlist tf-grid-layout tf-col-{{ section.settings.items_per_row_mobile }} lg-col-{{ section.settings.items_per_row_tablet }} xl-col-{{ section.settings.items_per_row_desktop }}"
            >
              {% if search.results.size > 0 %}
                {% for product in search.results %}
                  {% render 'product-card-wishlist', product: product %}
                {% endfor %}
              {% endif %}
            </div>

            {% if search.results.size <= 0 %}
              <div class="tf-wishlist-empty text-center">
                <p class="text-md text-noti mb-4">{{ 'sections.wishlist.no_product_added' | t }}</p>
                <a href="{{ routes.root_url }}" class="tf-btn animate-btn btn-back-shop">{{ 'sections.wishlist.back_to_shopping' | t }}</a>
              </div>
            {% endif %}

            {%- if paginate.pages > 1 -%}
              <div class="pagination-container">
                <ul class="wg-pagination justify-content-center">
                  {%- if paginate.previous -%}
                    <li>
                      <a href="{{ paginate.previous.url }}" class="pagination-item" title="Previous page">
                        <i class="icon-arr-left"></i>
                      </a>
                    </li>
                  {%- endif -%}

                  {%- for part in paginate.parts -%}
                    {%- if part.is_link -%}
                      <li>
                        <a href="{{ part.url }}" class="pagination-item" title="Go to page {{ part.title }}">
                          {{- part.title -}}
                        </a>
                      </li>
                    {%- else -%}
                      {%- if part.title == paginate.current_page -%}
                        <li class="active">
                          <span class="pagination-item" title="Current page">{{ part.title }}</span>
                        </li>
                      {%- else -%}
                        <li>
                          <span class="pagination-item">{{ part.title }}</span>
                        </li>
                      {%- endif -%}
                    {%- endif -%}
                  {%- endfor -%}

                  {%- if paginate.next -%}
                    <li>
                      <a href="{{ paginate.next.url }}" class="pagination-item" title="Next page">
                        <i class="icon-arr-right2"></i>
                      </a>
                    </li>
                  {%- endif -%}
                </ul>
              </div>
            {%- endif -%}
          {%- endpaginate -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<script>
  var isPageWishlist = !Shopify.designMode, isWishlistPerformed = {{ search.performed }};
</script>

{% schema %}
{
  "name": "t:sections.wishlist.name",
  "settings": [
    {
      "type": "select",
      "id": "width",
      "label": "t:sections.all.width.label",
      "options": [
        { "value": "full", "label": "t:sections.common.width.full" },
        { "value": "boxed", "label": "t:sections.common.width.boxed" }
      ],
      "default": "boxed"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme2"
    },
    {
      "type": "product_list",
      "id": "product_list",
      "label": "t:sections.wishlist.settings.product_list.label",
      "limit": 10,
      "info": "t:sections.wishlist.settings.product_list.info"
    },
    { "type": "header", "content": "t:sections.all.padding.section_padding_heading" },
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:sections.all.padding.padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:sections.all.padding.padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_mobile_rate",
      "label": "t:sections.all.padding.padding_mobile_rate.label",
      "info": "t:sections.all.padding.padding_mobile_rate.info",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 75
    },
    { "type": "header", "content": "t:sections.wishlist.settings.product_layout" },
    {
      "type": "range",
      "id": "max_items",
      "label": "t:sections.wishlist.settings.max_items.label",
      "min": 4,
      "max": 24,
      "step": 4,
      "default": 12,
      "info": "t:sections.wishlist.settings.max_items.info"
    },
    {
      "type": "select",
      "id": "items_per_row_desktop",
      "label": "t:sections.wishlist.settings.items_per_row_desktop.label",
      "default": "5",
      "options": [
        { "value": "1", "label": "1" },
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" },
        { "value": "5", "label": "5" }
      ]
    },
    {
      "type": "select",
      "id": "items_per_row_tablet",
      "label": "t:sections.wishlist.settings.items_per_row_tablet.label",
      "default": "3",
      "options": [
        { "value": "1", "label": "1" },
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" }
      ]
    },
    {
      "type": "select",
      "id": "items_per_row_mobile",
      "label": "t:sections.wishlist.settings.items_per_row_mobile.label",
      "default": "1",
      "options": [
        { "value": "1", "label": "1" },
        { "value": "2", "label": "2" }
      ]
    }
  ]
}
{% endschema %}
