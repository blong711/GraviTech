{% schema %}
{
  "name": "Main Slider",
  "settings": [
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "options": [
        {
          "value": "container",
          "label": "Boxed"
        },
        {
          "value": "container-full",
          "label": "Full width"
        }
      ],
      "default": "container"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Height",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt to image"
        },
        {
          "value": "adapt-first",
          "label": "Adapt to first image"
        },
        {
          "value": "fill",
          "label": "Fill screen height"
        },
        {
          "value": "fixed",
          "label": "Fixed height"
        }
      ],
      "default": "adapt"
    },
    {
      "type": "range",
      "id": "height_fixed",
      "label": "Fixed height",
      "min": 100,
      "max": 1000,
      "step": 10,
      "unit": "px",
      "default": 500,
      "info": "Only applies when height is set to fixed"
    },
    {
      "type": "select",
      "id": "mobile_height",
      "label": "Mobile height",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt to image"
        },
        {
          "value": "fixed",
          "label": "Fixed height"
        }
      ],
      "default": "adapt"
    },
    {
      "type": "range",
      "id": "mobile_height_fixed",
      "label": "Mobile fixed height",
      "min": 100,
      "max": 800,
      "step": 10,
      "unit": "px",
      "default": 300,
      "info": "Only applies when mobile height is set to fixed"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable autoplay",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "loop",
      "label": "Enable loop",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Slide Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Slide description goes here"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Explore More"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Main Slider",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}

{% style %}
.slider-height {
  {% if section.settings.height == 'fixed' %}
    height: {{ section.settings.height_fixed }}px;
  {% elsif section.settings.height == 'fill' %}
    height: 100vh;
  {% endif %}
}

@media (max-width: 767px) {
  .slider-height {
    {% if section.settings.mobile_height == 'fixed' %}
      height: {{ section.settings.mobile_height_fixed }}px;
    {% endif %}
  }
}
{% endstyle %}

<section class="tf-slideshow slider-electric-access slider-default slider-height">
    <div class="{{ section.settings.width }}">
        <div class="row">
            <div class="col-lg-12">
                <div class="swiper tf-sw-slideshow slider-effect-fade" 
                    data-preview="1" 
                    data-tablet="1"
                    data-mobile="1" 
                    data-centered="false" 
                    data-space="0" 
                    data-space-mb="0" 
                    data-loop="{{ section.settings.loop }}"
                    data-auto-play="{{ section.settings.autoplay }}">
                    <div class="swiper-wrapper">
                        {% for block in section.blocks %}
                            {% if block.type == 'slide' %}
                                <div class="swiper-slide" {{ block.shopify_attributes }}>
                                    <div class="slider-wrap">
                                        <div class="image">
                                            {% if block.settings.image %}
                                                {% assign image_class = 'lazyload' %}
                                                {% if section.settings.height == 'adapt' or section.settings.height == 'adapt-first' %}
                                                    {% assign image_class = image_class | append: ' w-100' %}
                                                {% elsif section.settings.height == 'fill' or section.settings.height == 'fixed' %}
                                                    {% assign image_class = image_class | append: ' w-100 h-100 object-fit-cover' %}
                                                {% endif %}
                                                
                                                {{ block.settings.image | image_url: width: 1920 | image_tag: 
                                                    loading: 'lazy',
                                                    class: image_class,
                                                    alt: block.settings.heading
                                                }}
                                            {% endif %}
                                        </div>
                                        <div class="box-content">
                                            <div class="container">
                                                <div class="row">
                                                    <div class="col-9 col-sm-6 col-xl-5">
                                                        <div class="content-slider">
                                                            <div class="box-title-slider">
                                                                <h4 class="heading display-md fw-medium fade-item fade-item-1">
                                                                    {{ block.settings.heading }}
                                                                </h4>
                                                                <p class="sub text-md fade-item fade-item-2">
                                                                    {{ block.settings.description }}
                                                                </p>
                                                            </div>
                                                            {% if block.settings.button_link %}
                                                                <div class="box-btn-slider fade-item fade-item-3">
                                                                    <a href="{{ block.settings.button_link }}"
                                                                        class="tf-btn btn-dark2 animate-btn">
                                                                        {{ block.settings.button_text }}
                                                                    </a>
                                                                </div>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="wrap-pagination">
                        <div class="container">
                            <div class="sw-dots style-dark sw-pagination-slider justify-content-center"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>