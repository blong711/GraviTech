{% render 'blog-sidebar' %}

{% schema %}
{
  "name": "Blog Sidebar",
  "tag": "section",
  "class": "blog-sidebar-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_sidebar",
      "label": "Show Sidebar",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_categories",
      "label": "Show Categories",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_recent_posts",
      "label": "Show Recent Posts",
      "default": true
    },
    {
      "type": "range",
      "id": "recent_posts_limit",
      "label": "Recent Posts Limit",
      "min": 3,
      "max": 10,
      "step": 1,
      "default": 5
    },
    {
      "type": "checkbox",
      "id": "show_tags",
      "label": "Show Tags",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Blog Sidebar"
    }
  ]
}
{% endschema %}
