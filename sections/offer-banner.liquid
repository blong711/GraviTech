        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.offer_banner.presets.name",
      "category": "t:sections.offer_banner.presets.category",
      "blocks": [
        {
          "type": "banner"
        },
        {
          "type": "banner"
        }
      ]
    }
  ]
