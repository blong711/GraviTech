            "max": 3,
            "step": 1,
            "default": 1
        },
        {
            "type": "range",
            "id": "item_height_desktop",
            "label": "Item height (Desktop)",
            "min": 200,
            "max": 800,
            "step": 10,
            "default": 400,
            "unit": "px"
        },
        {
            "type": "range",
            "id": "item_height_tablet",
            "label": "Item height (Tablet)",
            "min": 200,
            "max": 600,
            "step": 10,
            "default": 350,
            "unit": "px"
        },
        {
            "type": "range",
            "id": "item_height_mobile",
            "label": "Item height (Mobile)",
            "min": 150,
            "max": 500,
            "step": 10,
            "default": 300,
            "unit": "px"
        },
        {
            "type": "range",
            "id": "space_between_desktop",
            "label": "Space between items (Desktop)",
            "min": 0,
            "max": 50,
            "step": 2,
            "default": 24,
            "unit": "px"
        },
        {
            "type": "range",
            "id": "space_between_tablet",
            "label": "Space between items (Tablet)",
            "min": 0,
            "max": 40,
            "step": 2,
            "default": 12,
            "unit": "px"
        },
        {
            "type": "range",
            "id": "space_between_mobile",
            "label": "Space between items (Mobile)",
            "min": 0,
            "max": 30,
            "step": 2,
            "default": 12,
            "unit": "px"
        },
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 0
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 0
        },
        {
            "type": "range",
            "id": "padding_mobile_rate",
            "min": 0,
            "max": 100,
            "step": 5,
            "unit": "%",
            "label": "t:sections.top_bar.settings.padding_mobile_rate.label",
            "default": 75,
            "info": "t:sections.top_bar.settings.padding_mobile_rate.info"
        }
    ],
    "blocks": [
        {
            "type": "banner",
            "name": "Banner",
            "limit": 4,
            "settings": [
                {
                    "type": "header",
                    "content": "Banner Media"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Banner Image"
                },
                {
                    "type": "image_picker",
                    "id": "image_mobile",
                    "label": "Mobile Banner Image",
                    "info": "Optional. If not set, desktop image will be used"
                },
                {
                    "type": "header",
                    "content": "Banner Content"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title",
                    "default": "Banner Title"
                },
                {
                    "type": "select",
                    "id": "title_tag",
                    "label": "Title Size",
                    "options": [
                        {
                            "value": "h5",
                            "label": "Small"
                        },
                        {
                            "value": "h4",
                            "label": "Medium"
                        },
                        {
                            "value": "h3",
                            "label": "Large"
                        }
                    ],
                    "default": "h4"
                },
                {
                    "type": "select",
                    "id": "title_weight",
                    "label": "Title Weight",
                    "options": [
                        {
                            "value": "fw-light",
                            "label": "Light"
                        },
                        {
                            "value": "fw-normal",
                            "label": "Regular"
                        },
                        {
                            "value": "fw-medium",
                            "label": "Medium"
                        },
                        {
                            "value": "fw-semibold",
                            "label": "Semibold"
                        },
                        {
                            "value": "fw-bold",
                            "label": "Bold"
                        }
                    ],
                    "default": "fw-medium"
                },
                {
                    "type": "color_scheme",
                    "id": "color_scheme",
                    "label": "Color scheme",
                    "info": "Defines the color scheme for this banner"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Banner Link"
                },
                {
                    "type": "text",
                    "id": "button_label",
                    "label": "Button Label",
                    "default": "Shop Now"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Offer Banner",
            "blocks": [
                {
                    "type": "banner"
                },
                {
                    "type": "banner"
                }
            ]
        }
    ]
}
{% endschema %}
{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: calc({{ section.settings.padding_top }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
      padding-bottom: calc({{ section.settings.padding_bottom }}px * {{ section.settings.padding_mobile_rate | divided_by: 100.0 }});
    }
  
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

    .section-{{ section.id }} .banner-shop .img-style img {
      height: {{ section.settings.item_height_mobile }}px;
      object-fit: cover;
    }

    @media screen and (min-width: 768px) {
      .section-{{ section.id }} .banner-shop .img-style img {
        height: {{ section.settings.item_height_tablet }}px;
      }
    }

    @media screen and (min-width: 1024px) {
      .section-{{ section.id }} .banner-shop .img-style img {
        height: {{ section.settings.item_height_desktop }}px;
      }
    }
{%- endstyle -%}