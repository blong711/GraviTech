            "max": 6,
            "step": 1,
            "default": 2
        },
        {
            "type": "range",
            "id": "slides_per_view_tablet",
            "label": "Items per row (Tablet)",
            "min": 1,
            "max": 4,
            "step": 1,
            "default": 1
