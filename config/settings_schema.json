  {
    "name": "t:settings_schema.typography.name",
    "settings": [
      {
        "type": "header",
        "content": "Font Library Settings"
      },
      {
        "type": "radio",
        "id": "font_library",
        "label": "Font Library Source",
        "options": [
          {
            "value": "shopify",
            "label": "Shopify Fonts"
          },
          {
            "value": "google",
            "label": "Google Fonts"
          }
        ],
        "default": "shopify"
      },
      {
        "type": "header",
        "content": "Shopify Font library",
        "visible_if": "{{ settings.font_library == 'shopify' }}"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "label": "Heading font",
        "default": "helvetica_n4",
        "visible_if": "{{ settings.font_library == 'shopify' }}"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "label": "Body font",
        "default": "helvetica_n4",
        "visible_if": "{{ settings.font_library == 'shopify' }}"
      },
      {
        "type": "header",
        "content": "Google Font library",
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "text",
        "id": "heading_font_family",
        "label": "Heading font family",
        "default": "'Helvetica Neue', Helvetica, Arial, sans-serif",
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "range",
        "id": "heading_font_weight",
        "label": "Heading font weight",
        "min": 100,
        "max": 900,
        "step": 100,
        "default": 400,
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "text",
        "id": "body_font_family",
        "label": "Body font family",
        "default": "'Helvetica Neue', Helvetica, Arial, sans-serif",
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "range",
        "id": "body_font_weight",
        "label": "Body font weight",
        "min": 100,
        "max": 900,
        "step": 100,
        "default": 400,
        "visible_if": "{{ settings.font_library == 'google' }}"
      },
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "t:settings_schema.typography.settings.heading_scale.label",
        "default": 100
      },
      {
        "type": "range",
        "id": "heading_line_height",
        "min": 100,
        "max": 200,
        "step": 5,
        "unit": "%",
        "label": "Line Height",
        "default": 120
      },
      {
        "type": "range",
        "id": "heading_letter_spacing",
        "min": -2,
        "max": 2,
        "step": 0.1,
        "unit": "px",
        "label": "Letter Spacing",
        "default": 0
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "t:settings_schema.typography.settings.body_scale.label",
        "default": 100
      },
      {
        "type": "range",
        "id": "body_size_mobile",
        "min": 12,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "Base Size (Mobile)",
        "default": 14
      },
      {
        "type": "range",
        "id": "body_size_desktop",
        "min": 12,
        "max": 24,
        "step": 1,
        "unit": "px",
        "label": "Base Size (Tablet and Desktop)",
        "default": 14
      },
      {
        "type": "range",
        "id": "body_line_height",
        "min": 100,
        "max": 200,
        "step": 5,
        "unit": "%",
        "label": "Line Height",
        "default": 150
      },
      {
        "type": "range",
        "id": "body_letter_spacing",
        "min": -1,
        "max": 1,
        "step": 0.1,
        "unit": "px",
        "label": "Letter Spacing",
        "default": 0
      }
    ]
  },
