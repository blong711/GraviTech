{% comment %}
  Hero Slider Gradient Styles
  Cung cấp các gradient đẹp cho slider background
{% endcomment %}

{% style %}
  /* Gradient Presets for Hero Slider */
  .hero-slider__background--gradient-1 {
    background: linear-gradient(270deg, rgba(255, 218, 246, 1) 0%, rgba(237, 255, 218, 1) 100%);
  }

  .hero-slider__background--gradient-2 {
    background: linear-gradient(270deg, rgba(218, 255, 236, 1) 0%, rgba(255, 218, 218, 1) 100%);
  }

  .hero-slider__background--gradient-3 {
    background: linear-gradient(270deg, rgba(255, 240, 218, 1) 0%, rgba(218, 236, 255, 1) 100%);
  }

  .hero-slider__background--gradient-4 {
    background: linear-gradient(135deg, rgba(255, 218, 185, 1) 0%, rgba(218, 255, 218, 1) 100%);
  }

  .hero-slider__background--gradient-5 {
    background: linear-gradient(45deg, rgba(218, 218, 255, 1) 0%, rgba(255, 218, 255, 1) 100%);
  }

  /* Animation cho slide transitions */
  .hero-slider__slide {
    transform: translateX(0);
    transition: opacity 0.6s ease-in-out, transform 0.6s ease-in-out;
  }

  .hero-slider__slide.slide-enter {
    opacity: 0;
    transform: translateX(50px);
  }

  .hero-slider__slide.slide-exit {
    opacity: 0;
    transform: translateX(-50px);
  }

  /* Hover effects */
  .hero-slider:hover .hero-slider__content {
    transform: translateY(-5px);
    transition: transform 0.3s ease;
  }

  .hero-slider__button {
    position: relative;
    overflow: hidden;
  }

  .hero-slider__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }

  .hero-slider__button:hover::before {
    left: 100%;
  }

  /* Parallax effect cho image */
  .hero-slider__image {
    transform: translateZ(0);
    transition: transform 0.6s ease-out;
  }

  .hero-slider__slide.active .hero-slider__image {
    transform: translateZ(0) scale(1.05);
  }

  /* Enhanced dots animation */
  .hero-slider__dot {
    transform: scale(1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero-slider__dot:hover {
    transform: scale(1.2);
    background-color: #666;
  }

  .hero-slider__dot.active {
    transform: scale(1);
  }

  .hero-slider__dot.active::after {
    animation: dotPulse 2s infinite;
  }

  @keyframes dotPulse {
    0%,
    100% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 1;
    }
    50% {
      transform: translate(-50%, -50%) scale(1.2);
      opacity: 0.8;
    }
  }

  /* Loading animation */
  .hero-slider__slide {
    position: relative;
  }

  .hero-slider__slide::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, transparent, #6a3d2d, transparent);
    transform: translateX(-100%);
    z-index: 5;
  }

  .hero-slider__slide.active::before {
    animation: slideProgress 5s linear infinite;
  }

  @keyframes slideProgress {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  /* Text animation */
  .hero-slider__title,
  .hero-slider__description,
  .hero-slider__button {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease-out;
  }

  .hero-slider__slide.active .hero-slider__title {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.2s;
  }

  .hero-slider__slide.active .hero-slider__description {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.4s;
  }

  .hero-slider__slide.active .hero-slider__button {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.6s;
  }

  /* Background pattern overlay */
  .hero-slider__background::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 75% 75%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
    pointer-events: none;
  }
{% endstyle %}
