<!-- login -->
<div class="offcanvas offcanvas-end popup-style-1 popup-login" id="login">
    <div class="canvas-wrapper">
        <div class="canvas-header popup-header">
            <span class="title">{{ 'customer.login.title' | t }}</span>
            <button class="icon-close icon-close-popup" data-bs-dismiss="offcanvas" aria-label="{{ 'general.accessibility.close' | t }}"></button>
        </div>
        <div class="canvas-body popup-inner">
            {% form 'customer_login', class: 'form-login' %}
                <div>
                    <fieldset class="email mb_12">
                        <input type="email" name="customer[email]" class="" placeholder="{{ 'customer.login.email' | t }}*" required>
                    </fieldset>
                    <fieldset class="password">
                        <input type="password" name="customer[password]" class="" placeholder="{{ 'customer.login.password' | t }}*" required>
                    </fieldset>
                </div>
                <div class="bot">
                    <a href="#resetPass" data-bs-toggle="offcanvas" class="text text-sm text-main-2">{{ 'customer.login.forgot_password' | t }}</a>
                    <div class="button-wrap">
                        <button class="subscribe-button tf-btn animate-btn d-inline-flex bg-dark-2 w-100" type="submit">{{ 'customer.login.sign_in' | t }}</button>
                        <button type="button" data-bs-target="#register" data-bs-toggle="offcanvas" class="tf-btn btn-out-line-dark2 w-100">{{ 'customer.login.create_account' | t }}</button>
                    </div>
                </div>
            {% endform %}
        </div>
    </div>
</div>
<!-- /login -->