{% comment %}
  The password page template
{% endcomment %}

{%- liquid
  assign password_message = 'general.password_page.login_form_heading' | t
  assign password_placeholder = 'general.password_page.login_form_password_placeholder' | t
  assign password_button = 'general.password_page.login_form_submit' | t
  assign password_error = 'general.password_page.login_form_error' | t
  assign admin_link = 'general.password_page.admin_link_html' | t
  assign powered_by = 'general.password_page.powered_by_shopify_html' | t
-%}

<div class="password-page">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8">
        <div class="password-form-wrapper">
          <div class="password-header text-center mb-5">
            <h1 class="password-title">{{ shop.name }}</h1>
            <p class="password-subtitle">{{ password_message }}</p>
          </div>

          <div class="password-form">
            {%- form 'storefront_password', class: 'form-password' -%}
              {%- if form.errors -%}
                <div class="form-message error mb-4">
                  <div class="alert alert-danger">
                    <svg aria-hidden="true" focusable="false" class="error-icon me-2">
                      <use href="#icon-error" />
                    </svg>
                    {{ password_error }}
                  </div>
                </div>
              {%- endif -%}

              <div class="form-field mb-4">
                <input
                  type="password"
                  name="password"
                  id="Password"
                  class="form-control"
                  placeholder="{{ password_placeholder }}"
                  autocomplete="current-password"
                  required
                >
              </div>

              <div class="form-actions text-center">
                <button type="submit" class="btn btn-primary btn-lg w-100">
                  {{ password_button }}
                </button>
              </div>
            {%- endform -%}
          </div>

          <div class="password-footer text-center mt-5">
            <div class="password-admin-link">
              {{ admin_link }}
            </div>
            <div class="password-powered-by mt-3">
              {{ powered_by }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .password-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 2rem 0;
  }

  .password-form-wrapper {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 15px;
    padding: 3rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
  }

  .password-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #333;
    margin-bottom: 1rem;
  }

  .password-subtitle {
    font-size: 1.1rem;
    color: #666;
    margin-bottom: 0;
  }

  .form-control {
    height: 50px;
    border: 2px solid #e9ecef;
    border-radius: 8px;
    padding: 0 1rem;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .form-control:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
  }

  .btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    border-radius: 8px;
    height: 50px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
  }

  .password-admin-link a {
    color: #667eea;
    text-decoration: none;
    font-weight: 500;
  }

  .password-admin-link a:hover {
    text-decoration: underline;
  }

  .password-powered-by {
    font-size: 0.9rem;
    color: #999;
  }

  .error-icon {
    width: 16px;
    height: 16px;
    fill: currentColor;
  }

  @media (max-width: 768px) {
    .password-form-wrapper {
      padding: 2rem;
      margin: 1rem;
    }
    
    .password-title {
      font-size: 2rem;
    }
  }
</style>

